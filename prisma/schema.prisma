// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  confirmed Boolean    @default(false)
  blocked   Boolean    @default(false)
  providers Provider[]
  profile   Profile    @relation(fields: [profileId], references: [id])
  profileId String     @unique

  @@map("auths")
}

model Provider {
  id              Int       @id @default(autoincrement())
  name            String
  apiIdentifier   String
  apiToken        String?
  apiRefreshToken String?
  expiresAt       DateTime?
  auth            Auth      @relation(fields: [authId], references: [id])
  authId          String

  @@unique([name, apiIdentifier])
  @@map("providers")
}

model Profile {
  id          String    @id @default(uuid())
  userName    String    @unique
  email       String    @unique
  name        String?
  picture     String?
  biography   String?
  discordData Json?
  gender      String?
  dateOfBirth DateTime?
  createdAt   DateTime  @default(now())
  modifiedAt  DateTime  @updatedAt
  auth        Auth?
  role        Role      @relation(fields: [roleName], references: [name])
  roleName    String

  @@map("profiles")
}

model Role {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  scopes   String[]
  Profiles Profile[]

  @@map("roles")
}

model Home {
  id                  String   @id @default(uuid())
  seo                 Json
  heroTitle           String
  heroSubtitle        String
  heroImage           String
  clanesTitle         String
  clanesDescription   String
  clanesImage         String
  clanesButtonText    String
  socialNetworksTitle String
  socialNetworks      Json
  teamTitle           String
  teamJoinButtonText  String
  teamViewButtonText  String
  createdAt           DateTime @default(now())
  modifiedAt          DateTime @updatedAt

  @@map("homes")
}
